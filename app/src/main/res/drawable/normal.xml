<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/keyboard_divider" />
        </shape>
    </item>

    <!-- Add the main key background shape -->
    <item android:bottom="3dp" android:top="3dp" android:left="3dp" android:right="3dp" >
        <shape android:shape="rectangle" >
            <corners android:radius="5dp"  />
            <solid android:color="@color/keyboard_background_color" />
        </shape>
    </item>

</layer-list>
